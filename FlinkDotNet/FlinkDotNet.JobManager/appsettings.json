{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "StateSnapshotStore": {
    "Type": "GCS", // or "S3", "AzureBlob", "FileSystem"
    "AzureBlob": {
      "ConnectionString": "",
      "AccountName": "",
      "AccountKey": "",
      "BlobServiceEndpoint": "",
      "ContainerName": "flinkdotnet-azure-snapshots",
      "BasePath": "jobmanager_cluster_01_azure"
    },
    "S3": {
      "BucketName": "your-s3-bucket-name", // This remains specific to our needs
      "Region": "your-aws-region",         // This remains specific to our needs for explicit config
      "s3.endpoint": "",                 // Optional: For S3-compatible stores like MinIO (e.g., "http://localhost:9000")
      "s3.path.style.access": false,     // Set to true for MinIO if needed
      "s3.access-key": "",               // Optional: Leave empty to use IAM role or environment variables
      "s3.secret-key": "",               // Optional: Leave empty
      "SessionToken": "",                // Optional: For temporary credentials (not a Flink key, but useful)
      "BasePath": "jobmanager_s3_snapshots" // This remains specific to our needs
    },
    "GCS": {
      "BucketName": "your-gcs-bucket-name",
      "ProjectId": "", // Optional: Your Google Cloud Project ID
      "CredentialsFilePath": "", // Optional: Path to JSON credentials file. If empty, uses ADC.
      "Endpoint": "", // Optional: For GCS emulators (e.g., "http://localhost:4443")
      "BasePath": "jobmanager_gcs_snapshots"
    },
    "FileSystem": {
      "BasePath": "/tmp/flinkdotnet_snapshots_jm"
    }
  }
}
